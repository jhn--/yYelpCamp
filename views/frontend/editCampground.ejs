<% layout('./layouts/boilerplate') -%>
<section class="ui basic segment">
    <h1 class="ui header">Edit <%= campGround.title %></h1>
</section>
<div class="ui divider"></div>
<section class="ui grid basic segment">
    <div class="ui row">
        <div class="ui basic segment six wide column">
            <form class="ui form" method="post" action="/campground/<%= campGround._id %>/edit?_m=PUT">
                <div class="field">
                    <label>Title</label>
                    <input type="text" name="campground[title]" placeholder="Title" value="<%= campGround.title %>">
                </div>
                <div class="field">
                    <label>Location</label>
                    <input type="text" name="campground[location]" placeholder="City, State"
                        value="<%= campGround.location %>">
                </div>
                <div class="field">
                    <label>Image URL</label>
                    <input type="text" name="campground[image]" placeholder="Image URL" value="<%= campGround.image %>">
                </div>
                <div class="field">
                    <label>Price</label>
                    <div class="ui right labeled fluid input">
                        <label for="campground[price]" class="ui label">UST</label>
                        <input type="text" name="campground[price]" value="<%= campGround.price %>">
                        <div class="ui basic label">.00</div>
                    </div>
                </div>
                <div class="field">
                    <label>Description</label>
                    <textarea name="campground[description]" rows=10"><%= campGround.description %></textarea>
                </div>
                <button type="submit" class="ui labeled icon inverted green button">
                    <i class="right arrow icon"></i>
                    Submit
                </button>
                <a href="/campground/<%=campGround._id %>" class="ui labeled icon inverted red button">
                    <i class="times circle outline icon"></i>
                    Cancel
                </a>
            </form>
        </div>
    </div>
</section>